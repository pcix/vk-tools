{
  "manifest_version": 2,

  "name": "VK Tools",
  "description": "Download play lists",
  "version": "1.0",

  "browser_action": {
    "default_icon": "logo.ico"
  },
  "content_scripts": [
    {
      "matches": ["*://*.vk.com/*"],
      "js": [
        "download.js",
        "vk.js"
      ]
    }
  ],
  "permissions": [
    "activeTab", "https://ajax.googleapis.com/",
    "downloads"
  ]
}
